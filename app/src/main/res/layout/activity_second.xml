<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorTurquoise">

    <TextView
        android:id="@+id/tv_1_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@drawable/fields"
        android:fontFamily="monospace"
        android:gravity="center"
        android:padding="5sp"
        android:text="@string/information"
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_1_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CV"
        android:layout_marginLeft="120sp"
        android:layout_marginRight="120sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_second"/>

    <Button
        android:id="@+id/btn_2_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:layout_marginLeft="120sp"
        android:layout_marginRight="120sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_second"/>

    <Button
        android:id="@+id/btn_3_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="120sp"
        android:background="@drawable/button_second"
        android:text="Optimistic calculator" />
</LinearLayout>